<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidBoilerPlate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidBoilerPlate.TextViewStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/spoqahansans_regular</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.AndroidBoilerPlate.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/spoqahansans_medium</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@drawable/base_background_radius_4</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.AndroidBoilerPlate.BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:textViewStyle">@style/Theme.AndroidBoilerPlate.TextViewStyle</item>
        <item name="android:buttonStyle">@style/Theme.AndroidBoilerPlate.ButtonStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">
            @style/Theme.AndroidBoilerPlate.BottomSheetDialog.Background
        </item>
    </style>

    <style name="Theme.AndroidBoilerPlate.BottomSheetDialog.Background" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>